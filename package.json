{
	"name": "adr-tools",
	"displayName": "adr-tools",
	"description": "Architecture Decision Records tool",
	"version": "0.0.2",
	"publisher": "vincent-ledu",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vincent-ledu/vscode-adr-tools-extension.git"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.adr-init",
		"onCommand:extension.adr-new",
		"onCommand:extension.adr-link",
		"onCommand:extension.adr-help"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Configuration for ADR templates",
				"properties": {
					"adr.templates.repo": {
						"type": "string",
						"description": "Git repo for downloading ADR templates",
						"default": "https://github.com/vincent-ledu/adr-template.git"
					},
					"adr.templates.directory": {
						"type": "string",
						"description": "Git repo for downloading ADR templates",
						"default": "./.adr-templates"
					},
					"adr.project.directory": {
						"type": "string",
						"description": "Folder to store ADR for a project",
						"default": "./doc/adr"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.adr-init",
				"title": "ADR Init"
			},
			{
				"command": "extension.adr-new",
				"title": "ADR New"
			},
			{
				"command": "extension.adr-link",
				"title": "ADR Link"
			},
			{
				"command": "extension.adr-help",
				"title": "ADR Help"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "cross-env CODE_TESTS_WORKSPACE=/Users/travis/build/vincent-ledu/vscode-adr-tools-extension/testworkspace node ./node_modules/vscode/bin/test",
		"clean": "node clean.js"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"cross-env": "^5.2.0",
		"eslint": "^5.13.0",
		"gulp": "^4.0.2",
		"gulp-run": "^1.7.1",
		"gulp-bump": "^3.1.3",
		"gulp-git": "^2.9.0",
		"gulp-tag-version": "^1.3.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"minimist": "^1.2.0",
		"mustache": "^3.0.1",
		"plugin-error": "^1.0.1",
		"prettier": "^1.17.1"
	}
}
